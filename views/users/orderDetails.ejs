<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- <link rel="stylesheet" href="/css/styles.css"> -->
</head>
<body>
  <div class="container mt-5">
    <div class="card">
      <div class="card-header">
        <h3>Order Details</h3>
      </div>
      <div class="card-body">
        <h4 class="card-title">Order ID: <%= order._id %></h4>
        <p class="card-text">Order Date: <%= order.createdAt.toDateString() %></p>
        <p class="card-text">User: <%= order.userId.name %> (Email: <%= order.userId.email %>)</p>
        <p class="card-text">Shipping Address:
                <span><address >
                    
                   <strong><%= Address.name %></strong><br>
                    <%= Address.street %><br>
                    <%= Address.city  %>,
                    <%= Address.state %>,
                    <%= Address.country %>
                    <br><p>Pin: <%= Address.pincode %></p>

                <p>Mobile No: <%= Address.mobile %></p>
                </address></span>
            </p>
        <p class="card-text">Order Status: <span class="badge badge-info"><%= order.orderStatus %></span></p>
        <p class="card-text">Payment Status: <span class="badge badge-warning"><%= order.paymentStatus %></span></p>

        <h3 class="mt-4">Products:</h3>
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Size</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% order.products.forEach(product => { %>
                <tr>
                  <td><%= product.productId.name %></td>
                  <td><%=product.size%></td>
                  <td><%= product.quantity %></td>
                  <td>₹<%= product.price/product.quantity %></td>
                  <td>₹<%= product.price %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <h3 class="mt-4">Total Amount: ₹<%= order.totalAmount %></h3>
      </div>
      <div class="card-footer text-right">
        <a href="/profile#orders" class="btn btn-primary">Back to Orders</a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- <script src="/js/scripts.js"></script> -->
</body>
</html>

