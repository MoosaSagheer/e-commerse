      <script>
        let cropper;
    
        function handleFileChange(event, index) {
            const input = event.target;
            const imagePreviewContainer = document.getElementById(`imagePreviewContainer${index}`);
            const cropContainer = document.getElementById(`cropContainer${index}`);
            const cropImage = document.getElementById(`cropImage${index}`);
    
            if (input.files && input.files[0]) {
                const reader = new FileReader();
    
                reader.onload = function(e) {
                    imagePreviewContainer.innerHTML = "";
                    cropImage.src = e.target.result;
                    cropContainer.style.display = "block";
    
                    if (cropper) {
                        cropper.destroy();
                    }
    
                    cropper = new Cropper(cropImage, {
                        aspectRatio: 736/1100,
                        viewMode: 1,
                        minContainerWidth: 736,
                        minContainerHeight: 1100
                    });
                };
    
                reader.readAsDataURL(input.files[0]);
            } else {
                imagePreviewContainer.innerHTML = "";
                cropContainer.style.display = "none";
            }
        }
    
        function cropImage(index) {
            const canvas = cropper.getCroppedCanvas({
                width: 736,
                height: 1100
            });
    
            canvas.toBlob(function(blob) {
                const croppedImage = new File([blob], `cropped_image_${index}.jpg, { type: "image/jpeg" }`);
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(croppedImage);
                const fileInput = document.getElementById(`imageInput${index}`);
                fileInput.files = dataTransfer.files;
    
                const imagePreviewContainer = document.getElementById(`imagePreviewContainer${index}`);
                imagePreviewContainer.innerHTML = `<img src="${URL.createObjectURL(blob)}" class="img-sm img-thumbnail" style="width:100%; height:100%">`;
    
                const cropContainer = document.getElementById(`cropContainer${index}`);
                cropContainer.style.display = "none";
    
                cropper.destroy();
            });
        }
    </script>
      
