    <script>
    async function productValidate() {
        // 1. Client-Side Validation (Optional, but recommended)
        const product_name = document.getElementById('product_name').value.trim();
        const product_description = document.getElementById('product_description').value.trim();
        const product_Aprice = document.getElementById('product_Aprice').value.trim();
        const product_Pprice = document.getElementById('product_Pprice').value.trim();
        const imageInput = document.getElementById('image_name').files[0]
    
        document.getElementById("error_Pname").innerHTML = "";
        document.getElementById("error_PD").innerHTML = "";
        document.getElementById("error_Paprice").innerHTML = "";
        document.getElementById("error_Ppprice").innerHTML = "";
    
        // 2. Client-Side Validation Logic
        if (product_name === "" || !imageInput ||  product_description === "" || product_Aprice === "" || product_Pprice === "") {
            if (product_name === "") {
                document.getElementById("error_Pname").innerHTML = "Please enter a product name.";
            }
            if (!imageInput) {
                document.getElementById("error_pimage").innerHTML = "Please select an image.";
            }
            if (product_description === "") {
                document.getElementById("error_PD").innerHTML = "Please enter a description.";
            }
            if (product_Aprice === "") {
                document.getElementById("error_Paprice").innerHTML = "Please enter the regular price.";
            }
            if (product_Pprice === "") {
                document.getElementById("error_Ppprice").innerHTML = "Please enter the promotional price.";
            }
    
            return false; // Stop further execution if there are errors
        }
    
        // 3. Create FormData and Send with Fetch
        const formData = new FormData(document.querySelector('form'));
        // Add the product ID to the form data 
        // Assuming 'data._id' is accessible from your EJS context
        // formData.append('id', '<%= data._id %>');
    
        try {
            const response = await fetch("/admin/editproduct", {
                method: "POST",
                body: formData,
            });
    
            if (response.ok) {
                const data = await response.json();
                if (data.updated) {
                    window.location.href = "/admin/products"; 
                } else {
                    // Handle server-side errors (if any)
                    console.error("Server-side validation errors:", data.errors);
                    // ... (Display error messages to the user)
                }
            } else {
                console.error("Error updating product:", response.statusText);
            }
        } catch (error) {
            console.error("Fetch error:", error);
        }
    
        return false; // Prevent default form submission
    }
    </script>
    
    
